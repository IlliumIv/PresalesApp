<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <MessageSnackbar @ref=messageHandler />
            <CascadingValue Value="@messageHandler">
                <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
            </CascadingValue>
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <Alert Color="Color.Danger" Visible="true">
                    <Heading Size="HeadingSize.Is4" TextColor="TextColor.Danger">
                        404 Not Found
                    </Heading>
                    <Paragraph>
                        Sorry, there's nothing at this address.
                    </Paragraph>
                    <Paragraph>
                        <Button Color="Color.Primary" Type="ButtonType.Link" To="/">Wanna do this</Button>
                    </Paragraph>
                </Alert>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>

@code {
    private MessageSnackbar messageHandler = new MessageSnackbar();
}