@using PresalesApp.Web.Client.Views.Autorization

<AuthorizeView>
    <Authorized>
        <RadzenButton Text="@_UserName"
                      Variant="Variant.Text" ButtonStyle="ButtonStyle.Base" Icon="person" />
        <RadzenButton Text="@Localization["LogoutButtonText"]"
                      Variant="Variant.Text" ButtonStyle="ButtonStyle.Base" Icon="logout"
                      Click="@(args => _Logout())" />
    </Authorized>
    <NotAuthorized>
        <RadzenButton Text="@Localization["RegisterModalButtonText"]"
                      Variant="Variant.Text" ButtonStyle="ButtonStyle.Primary" Icon="how_to_reg"
                      Click="@(args => _OpenRegisterForm())" />
        <RadzenButton Text="@Localization["LoginButtonModalText"]"
                      Variant="Variant.Text" ButtonStyle="ButtonStyle.Primary" Icon="login"
                      Click="@(args => _OpenLoginForm())" />
    </NotAuthorized>
</AuthorizeView>