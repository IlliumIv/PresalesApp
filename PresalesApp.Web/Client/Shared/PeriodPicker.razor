@using System.Globalization
@using PresalesApp.Web.Client.Enums
@using PresalesApp.Web.Client.Shared.DropDown

<RadzenDropDown Data=@periodTypes @bind-Value=@SelectedPeriod Change="SelectedPeriodChanged">
    <Template>
        @(((PeriodType)context).GetLocalizedName(Localization))
    </Template>
</RadzenDropDown>
@{
    if (SelectedPeriod == PeriodType.Arbitrary)
    {
        <RadzenDatePicker @bind-Value=@begin/>
        <RadzenDatePicker @bind-Value=@end/>
    }
    else
    {
        <CustomRadzenDropDown @ref="itemsDropDown" Data=@items @bind-Value=@selectedItem TextProperty="Text" Change="@DropDown1Change" />
    }
}