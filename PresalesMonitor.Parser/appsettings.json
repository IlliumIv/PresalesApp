{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Async" ],
    "MinimumLevel": "Verbose",
    "WriteTo:Verbose": {
      "Name": "Async",
      "Args": {
        "Configure": [
          {
            "Name": "Console",
            "Args": {
              "RestrictedToMinimumLevel": "Verbose",
              "outputTemplate": "[{Timestamp:dd:MM:yyyy hh:MM:ss.fff}] [{Level:u3}] {Message}{NewLine}\t{Exception}{NewLine}"
            }
          }
        ]
      }
    },
    "WriteTo:Information": {
      "Name": "Async",
      "Args": {
        "Configure": [
          {
            "Name": "File",
            "Args": {
              "RestrictedToMinimumLevel": "Information",
              "path": "parser.log",
              "outputTemplate": "[{Timestamp:dd:MM:yyyy hh:MM:ss.fff}] [{Level:u3}] {Message}{NewLine}\t{Exception}{NewLine}"
            }
          }
        ]
      }
    },
    "WriteTo:Error": {
      "Name": "Async",
      "Args": {
        "Configure": [
          {
            "Name": "File",
            "Args": {
              "RestrictedToMinimumLevel": "Error",
              "path": "errors.log",
              "outputTemplate": "[{Timestamp:dd:MM:yyyy hh:MM:ss.fff}] [{Level:u3}] {Message}{NewLine}{Exception}{NewLine}"
            }
          }
        ]
      }
    },

    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Destructure": [
      {
        "Name": "ToMaximumDepth",
        "Args": { "maximumDestructuringDepth": 4 }
      },
      {
        "Name": "ToMaximumStringLength",
        "Args": { "maximumStringLength": 100 }
      },
      {
        "Name": "ToMaximumCollectionCount",
        "Args": { "maximumCollectionCount": 10 }
      }
    ]
  }
}